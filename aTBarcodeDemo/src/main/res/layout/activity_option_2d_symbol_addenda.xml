<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp" >
            
            <CheckBox android:id="@+id/check_digit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/check_digit"
                android:textColor="@color/label_caption"/>
               
            <CheckBox android:id="@+id/addenda_2_digit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/addenda_2_digit"
                android:textColor="@color/label_caption"/>
            
            <CheckBox android:id="@+id/addenda_5_digit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/addenda_5_digit"
                android:textColor="@color/label_caption"/>
            
            <CheckBox android:id="@+id/addenda_required"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/addenda_required"
                android:textColor="@color/label_caption"/>
            
            <CheckBox android:id="@+id/addenda_separator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/addenda_separator"
                android:textColor="@color/label_caption"/>
            
            <CheckBox android:id="@+id/number_system"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="14sp"
                android:text="@string/number_system"
                android:textColor="@color/label_caption"/>
            
            <CheckBox android:id="@+id/ext_coupon_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="14sp"
                android:text="@string/coupon_code"
                android:textColor="@color/label_caption"/>
            
            <CheckBox android:id="@+id/expand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="14sp"
                android:text="@string/expand"
                android:textColor="@color/label_caption"/>
            
            <CheckBox android:id="@+id/isbn_translate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="14sp"
                android:text="@string/isbn_translate"
                android:textColor="@color/label_caption"/>
            
        </LinearLayout>
        
    </ScrollView>
	
	<View android:layout_width="fill_parent" android:layout_height="10dp"/>
    	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >
    				
		<Button android:id="@+id/set_option"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:textSize="16sp"
		    android:text="@string/set_option"/>
        
    </LinearLayout>
        
</LinearLayout>
