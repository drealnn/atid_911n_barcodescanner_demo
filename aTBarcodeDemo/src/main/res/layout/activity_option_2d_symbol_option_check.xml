<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp" >
		    
			<CheckBox 
			    android:id="@+id/symbol_enable"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="14sp"
			    android:text="@string/symbol_enable"
			    android:textColor="@color/label_caption" />
			
			<CheckBox 
			    android:id="@+id/symbol_opt1"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="14sp"
			    android:text="@string/symbol_opt1"
			    android:textColor="@color/label_caption" />
			
			<CheckBox 
			    android:id="@+id/symbol_opt2"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="14sp"
			    android:text="@string/symbol_opt1"
			    android:textColor="@color/label_caption" />
			
			<CheckBox 
			    android:id="@+id/symbol_GS1_128EmulMode"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:textSize="14sp"
			    android:text="@string/symbol_opt1"
			    android:textColor="@color/label_caption" />
			
		
	            
			    <View android:layout_width="30dp" android:layout_height="10dp" />
	            
			    <TextView
			        android:id="@+id/symbol_upcCompositeMode"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="14sp"
			        android:text="Option"
			        android:textColor="@color/label_caption" />
	        
			
			    
			
			    
			    
			    
			    <Spinner
			        android:id="@+id/spinnerUpcCompositeMode"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:textSize="14sp" />
				
			
        
			
			
			
			
	            
			    <View android:layout_width="10dp" android:layout_height="10dp" />
	            
			    <TextView 
				    android:id="@+id/symbol_CompositeBeepMode"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:textSize="14sp"
				    android:text="@string/symbol_opt1"
				    android:textColor="@color/label_caption" />
	        
			
			
			
			    
		    <Spinner
		        android:id="@+id/spinnerCompositeBeepMode"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textSize="14sp" />
			
			
			
			<LinearLayout
			    android:id="@+id/symbol_opt3__lnl"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:paddingRight="5dp" >
			
			    <TextView
			        android:id="@+id/symbol_opt3_txt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="14sp"
			        android:text="Option"
			        android:textColor="@color/label_caption" />
			    
			    <View android:layout_width="20dp" android:layout_height="10dp"/>
			    
			    <Spinner
			        android:id="@+id/symbol_opt3"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content" />
			
			</LinearLayout>
			
        </LinearLayout>
        
    </ScrollView>
	
	<View android:layout_width="fill_parent" android:layout_height="10dp"/>
    	
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >
    				
		<Button 
		    android:id="@+id/set_option"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:textSize="16sp"
		    android:text="@string/set_option"/>
        
    </LinearLayout>

</LinearLayout>
