<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical|horizontal"
    tools:context=".MainActivity" >

    <!-- Version Layout -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    
        <!-- Demo Version -->
	    <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:text="@string/demo_version"
	        android:textColor="@color/label_color"
	        android:textSize="12sp" />
	       
		<TextView android:id="@+id/demo_version"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|right"
	
			android:textColor="@color/value_color"
			android:textSize="14sp"
			android:textStyle="bold" />
	
		<!-- Firmware Version -->
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:text="@string/device_revision"
			android:textColor="@color/label_color"
			android:textSize="12sp" />
		
		<TextView android:id="@+id/device_revision"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|right"
			android:textSize="14sp"
			android:textColor="@color/value_color"
			android:textStyle="bold"
/>
        
    </LinearLayout>

    <View android:layout_width="wrap_content" android:layout_height="10dp" />
			
    <ListView
        android:id="@+id/scan_result"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:padding="5dp"
        android:scrollbars="vertical|horizontal" />
    
    <View android:layout_width="wrap_content" android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	    
	    <Button android:id="@+id/clear"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/clear_label"
	        android:textSize="16sp"
	        android:padding="5dp" />
        
	    <View android:layout_width="5dp" android:layout_height="0dp" />
	    	    
	    <Button android:id="@+id/scan_action"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="3"
	        android:text="@string/start_scan_label"
	        android:textSize="16sp"
	        android:textStyle="bold"
	        android:padding="5dp" />
        
    </LinearLayout>
    
</LinearLayout>
